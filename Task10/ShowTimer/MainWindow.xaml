<Window x:Class="ShowTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Name="run" Content="run" HorizontalAlignment="Left" Margin="210,231,0,0" VerticalAlignment="Top" Width="75" Click="run_Click"/>
        <TextBox Name="seconds" HorizontalAlignment="Left" Height="23" Margin="186,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="seconds_TextChanged"/>
        <Button Name="stopTimer" Content="Cancel" HorizontalAlignment="Left" Margin="324,231,0,0" VerticalAlignment="Top" Width="75" Click="stopTimer_Click"/>
        <TextBlock Name="showTimer" HorizontalAlignment="Left" Margin="210,84,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"/>

    </Grid>
</Window>
